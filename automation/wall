local args = { ... }

function main()
    if #args ~= 2 then
        io.write("Usage: wall <length> <height>")
        return
    end

    length = tonumber(args[1])
    height = tonumber(args[2])

    io.write("Length is " .. length .. ".\n")
    io.write("Height is " .. height .. ".\n")

    moved = 0
    while (moved < length) do
        forward()

        dig()
        pillar()
        wall()    

        moved = moved + 1
    end
end

-- Move forward one block, climb/descend as neccasary
function foward()
    turtle.forward()
end

-- Dig Down to bedrock
function dig()
end

-- Pillar back up to surface
function pillar()
end

-- Build a wall of hieght x on the surface
function wall()
end

-- Deposit all of the mined materials
function deposit()
    last_slot = turtle.getSelectedSlot()
    turtle.select(14)
    turtle.placeUp()
    i = 1
    while (i <= 12) do
        turtle.select(i)
        turtle.dropUp()
    end
    turtle.select(15)
    turtle.digUp()
    turtle.select(last_slot)
end

-- Restock Build Material
function restock()
    last_slot = turtle.getSelectedSlot()

    turtle.select(14)
    turtle.placeUp()
    turtle.suckUp()
    turtle.transferTo(1)
    turtle.dropUp()
    turtle.digUp()

    turtle.select(last_slot)
end

-- Restock Fuel 
function refuel()
    last_slot = turtle.getSelectedSlot()

    turtle.select(15)
    turtle.placeUp()
    turtle.suckUp()
    turtle.refuel(turtle.getItemCount())
    turtle.digUp()

    turtle.select(last_slot)
end

--main()
deposit()


